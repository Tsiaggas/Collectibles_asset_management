{
  "compilerOptions": {
    "lib": ["deno.core", "deno.unstable"]
  },
  "lint": {
    "files": {
      "include": ["./functions/"]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "files": {
      "include": ["./functions/"]
    },
    "options": {
      "useTabs": true,
      "lineWidth": 80,
      "indentWidth": 4,
      "singleQuote": false
    }
  },
  "tasks": {
    "start": "deno run --watch --allow-all functions/_shared/dev.ts"
  },
  "importMap": "./functions/import_map.json"
}
